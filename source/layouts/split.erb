<!doctype html>
<html>
  <head>
		<%= partial "partials/head" %>
		<title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog('blog').options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
		<%= partial "partials/recipe_schema_markup" %>
  </head>
  <body>
		<%= partial "partials/header" %>
		<div class="lg:mt-3 lg:px-3">
			<div class="flex flex-col lg:flex-row lg:gap-x-3 max-w-5xl mx-auto">
				<div class="lg:w-1/3 w-full lg:sticky top-10 h-fit bg-[#f4f1e7] lg:p-2 lg:pb-4 order-2 lg:order-2">
					<div class="hidden lg:block text-center md:px-2">
						<%= partial "partials/signup_sidebar" %>
					</div>
				</div>
				<div class="lg:w-2/3 w-full order-1 md:order-1">
					<div class="block lg:hidden">
						<%= partial "partials/signup" %>
					</div>
					<main>
						<%= yield %>
					</main>
				</div>
			</div>
		</div>
		<%= partial "partials/footer" %>
  </body>
</html>
