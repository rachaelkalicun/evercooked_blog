<!doctype html>
<html>
  <head>
		<%= partial "partials/head" %>
    <%= feed_tag :atom, "#{blog('blog').options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
		<%= partial "partials/recipe_schema_markup" %>
  </head>
  <body>
		<%= partial "partials/header" %>
		<div class="md:mt-3 md:px-3">
			<div class="flex flex-col md:flex-row md:gap-x-3 max-w-5xl mx-auto">
				<div class="md:w-2/5 lg:w-1/3 w-full md:sticky top-10 h-fit bg-[#f4f1e7] md:p-2 md:pb-4 order-2 md:order-2">
					<div class="hidden md:block text-center md:px-2">
						<%= partial "partials/signup_sidebar" %>
					</div>
				</div>
				<div class="md:w-3/5 lg:w-2/3 w-full order-1 md:order-1">
					<div class="block md:hidden">
						<%= partial("partials/signup", locals: { split_layout: true }) %>

					</div>
					<main>
						<%= yield %>
					</main>
				</div>
			</div>
		</div>
		<%= partial "partials/footer" %>
  </body>
</html>
