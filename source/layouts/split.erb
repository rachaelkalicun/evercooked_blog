<!doctype html>
<html>
  <head>
		<%= partial "partials/head" %>
		<title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog('blog').options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
		<%#= partial "partials/recipe_schema_markup" %>
  </head>
  <body>
		<%= partial "partials/header" %>
		<div class="mt-5">
			<div class="flex flex-col md:flex-row px-4 md:gap-x-4 max-w-5xl mx-auto">
				<div class="md:w-1/3 w-full md:sticky top-10 h-fit bg-white border border-backgroundlight shadow-sm md:px-2 text-center order-2 md:order-2">
					<div class="hidden md:block lg:hidden">
						<%= partial "partials/content_sidebar" %>
					</div>
					<div class="hidden lg:block">
						<%= partial "partials/signup_sidebar" %>
					</div>
				</div>
				<div class="md:w-2/3 w-full order-1 md:order-1">
					<div class="block lg:hidden">
						<%= partial "partials/signup" %>
					</div>
					<main>
						<%= yield %>
					</main>
					<div class="block md:hidden lg:block">
						<%= partial "partials/content_sidebar" %>
					</div>
				</div>
			</div>
		</div>
		<%= partial "partials/footer" %>
  </body>
</html>
