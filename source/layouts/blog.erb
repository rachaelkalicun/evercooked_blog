<!doctype html>
<html>
  <head>
		<%= partial "partials/head" %>
		<title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
		<%= partial "partials/recipe_schema_markup" %>
  </head>
  <body>
		<%= partial "partials/header" %>
		<div class="mt-5">
			<div class="flex flex-col lg:flex-row px-4 lg:gap-x-4 space-y-6 lg:space-y-0 max-w-5xl mx-auto">
				<div class="lg:w-1/3 w-full lg:sticky top-10 h-fit bg-white border border-backgroundlight shadow-sm lg:px-2 text-center order-1 lg:order-2">
						<%= partial "partials/signup_sidebar" %>
				</div>
				<div class="lg:w-2/3 w-full space-y-6 order-2 lg:order-1">
					<main>
							<img src="<%= current_page.data.main_image %>" alt="Logo" />
							<%= yield %>
							<aside>
								<h2>Recent Articles</h2>
								<ol>
										<% blog.articles[0...10].each do |article| %>
												<li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
										<% end %>
								</ol>

								<h2>Tags</h2>
								<ol>
										<% blog.tags.each do |tag, articles| %>
												<li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
										<% end %>
								</ol>
							</aside>
					</main>
				</div>
			</div>
		</div>

		
		
		<%= partial "partials/footer" %>
  </body>
</html>
