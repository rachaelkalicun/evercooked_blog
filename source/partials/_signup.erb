<section class="w-full px-2 md:px-6 py-6 md:py-8 bg-[#f4f1e7]">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-4xl md:text-5xl mt-0 leading-tight md:mt-6 font-medium mb-2 alt_font">
      Get Started
    </h2>

    <p class="text-lg mb-2">
      Embrace love and legacy as they guide your kitchen journey
    </p>

    <div class="flex justify-center mt-4">
      <div class="rounded-lg overflow-hidden shadow-sm border-2 border-gray-100 bg-white">
				<p class="text-2xl md:text-3xl text-accent mt-4 mb-0 alt_font bg-white pt-2 px-4 md:px-8">
					Recipes, stories, and traditions each week
				</p>
        <iframe class="w-full" id="signup-main" src="https://evercooked.substack.com/embed" frameborder="0" scrolling="no"></iframe>
      </div>
    </div>
    <p id="adblock-warning-main" class="hidden text-[#d97706] font-semibold text-lg md:text-xl mt-4">
      Please disable your ad blocker to join our community!
    </p>
  </div>
</section>


<script>
  function isIframeHiddenMain() {
    const iframe = document.getElementById("signup-main");
    if (!iframe) return true;
    return iframe.offsetParent === null;
  }

  function toggleWarningMain() {
    const warning = document.getElementById("adblock-warning-main");
    if (isIframeHiddenMain()) {
      warning.classList.remove("hidden");
    } else {
      warning.classList.add("hidden");
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    toggleWarningMain();
  });

  window.addEventListener("resize", function () {
    toggleWarningMain();
  });
</script>
