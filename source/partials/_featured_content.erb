<section class="w-full px-5 py-5 bg-gradient-to-b from-[#eaeaef] to-[#f8f8f9] rounded-md">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-xl md:text-3xl font-normal my-0">Stories, traditions, and flavors waiting to be explored</h2>
    <p class="mt-1 text-xl font-normal">The latest from Evercooked</p>
  </div>
  <div class="max-w-5xl mx-auto mt-3 grid gap-5 sm:grid-cols-2">
    <% latest_post = blog('blog').articles.first %>
    <a href="<%= latest_post.url %>" class="p-6 bg-[#ffffff] shadow-sm hover:shadow-md transition rounded-md flex flex-col justify-between text-body">
      <div>
        <img src="<%= latest_post.data.featured_image %>" alt="Blog Post 1" class="mb-4">
				<h3 class="text-xl font-semibold"><%= latest_post.data.on_page_title %></h3>
        <p class="mt-2"><%= latest_post.summary %></p>
      </div>
      <p class="md:hidden mt-3 mb-0 inline-block text-link font-medium hover:text-linkhover transition">Read more</p>
    </a>

    <% latest_newsletter = blog('newsletters').articles.first %>
    <a href="<%= latest_newsletter.url %>" class="p-6 bg-[#ffffff] shadow-sm hover:shadow-md transition rounded-md flex flex-col justify-between text-body">
      <div>
        <img src="<%= latest_newsletter.data.featured_image %>" alt="Blog Post 1" class="mb-4">
        <h3 class="text-xl font-semibold"><%= latest_newsletter.data.on_page_title %></h3>
        <p class="mt-2"><%= latest_newsletter.summary %></p>
      </div>
      <p class="md:hidden mt-3 mb-0 inline-block text-link font-medium hover:text-linkhover transition">Read more</p>
    </a>
  </div>
</section>
<div class="flex items-center justify-center my-12">
	<hr class="w-1/3 h-px bg-[#e1e1e1] border-0">
</div>
