<section class="w-full px-6 py-8 bg-backgroundlight">
	<div class="max-w-4xl mx-auto text-center">
  	<h2 class="text-xl md:text-2xl font-bold my-0">Latest from Evercooked</h2>
    <p class="mt-0">Stories, traditions, and flavors waiting to be explored.</p>
  </div>
  <div class="max-w-5xl mx-auto mt-8 grid gap-6 sm:grid-cols-2">
		<% latest_post = blog('blog').articles.first %>
  	<a href="<%= latest_post.url %>" class="p-6 bg-[#ffffff] rounded-lg shadow-sm hover:shadow-md transition block">
			<div class="text-body">
					<img src="<%= latest_post.data.featured_image %>" alt="Blog Post 1" class="rounded-lg mb-4">
					<h3 class="text-xl font-semibold"><%= latest_post.title %></h3>
					<p class="mt-2"><%= latest_post.summary %></p>
					<p class="mt-3 inline-block text-link font-medium hover:text-linkhover transition">Read more →</p>
			</div>
    </a>

		<% latest_newsletter = blog('newsletters').articles.first %>
  	<a href="<%= latest_newsletter.url %>" class="p-6 bg-[#ffffff] rounded-lg shadow-sm hover:shadow-md transition block">
			<div class="text-body">
				<img src="<%= latest_newsletter.data.featured_image %>" alt="Blog Post 1" class="rounded-lg mb-4">
				<h3 class="text-xl font-semibold"><%= latest_newsletter.title %></h3>
				<p class="mt-2"><%= latest_newsletter.summary %></p>
				<p class="mt-3 inline-block text-link font-medium hover:text-linkhover transition">Read more →</p>
			</div>
    </a>

  </div>
</section>
