<section class="w-full px-2 sm:px-5 py-1 lg:py-8 lg:bg-[#eaeaef] mt-0 lg:mt-10 xl:rounded-md">
  <div class="max-w-5xl mx-auto">
    <div>
      <h3 class="text-2xl md:text-4xl font-normal my-0 alt_font tracking-wide mb-4 text-center">Latest Posts</h3>
      <div class="grid gap-4 mt-4 sm:grid-cols-2 lg:grid-cols-4">
        <% blog('blog').articles[1...6].select(&:published?).each do |article| %>
          <a href="<%= article.url %>" class="p-4 bg-white border border-gray-100 shadow-sm hover:shadow-md transition text-body flex flex-col justify-between hover:text-link hover:cursor-pointer">
            <div>
              <img src="<%= article.data.featured_image %>" alt="Blog Post 2" class="mb-4">
              <h4 class="font-semibold leading-snug"><%= article.data.on_page_title %></h4>
            </div>
						<p class="md:hidden mt-2 mb-0 text-link hover:text-linkhover transition">Read more →</p>
          </a>
        <% end %>
      </div>
      <div class="text-center mt-6">
        <a href="/blog/" class="inline-block  bg-link text-white p-3 px-6 rounded-md tracking-wider hover:bg-opacity-90">View All →</a>
      </div>
    </div>
  </div>
</section>
