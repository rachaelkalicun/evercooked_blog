<section class="w-full px-6 py-6 bg-gradient-to-b from-[#eaeaef] to-[#f8f8f9] rounded-md">
  <div class="max-w-5xl mx-auto">
    <div class="mb-8">
      <h3 class="text-2xl font-normal text-center">Blog Posts</h3>
      <div class="grid gap-2 mt-4 sm:grid-cols-2 lg:grid-cols-4">
        <% blog('blog').articles[2...6].each do |article| %>
          <a href="<%= article.url %>" class="p-4 bg-white border border-gray-200 shadow-sm hover:shadow-md transition text-body flex flex-col justify-between hover:text-link">
            <div>
              <img src="<%= article.data.featured_image %>" alt="Blog Post 2" class="mb-4">
              <h4 class="font-semibold leading-snug"><%= article.title %></h4>
            </div>
						<p class="md:hidden mt-2 mb-0 text-link hover:text-linkhover transition">Read more</p>
          </a>
        <% end %>
      </div>
      <div class="text-center mt-4">
        <a href="/blog/" class="inline-block font-semibold bg-link text-white p-3 px-6 rounded-sm text-xs hover:bg-opacity-90">View All →</a>
      </div>
    </div>
		<div class="flex items-center justify-center mt-14">
			<hr class="w-1/3 h-px bg-[#C5C5D2] border-0">
		</div>
    <div class="mb-8 mt-10">
      <h3 class="text-2xl font-normal text-center">Newsletters</h3>
      <div class="grid gap-2 mt-4 sm:grid-cols-2 lg:grid-cols-4">
        <% blog('newsletters').articles[0...4].each do |article| %>
          <a href="<%= article.url %>" class="p-4 bg-white border border-gray-200 shadow-sm hover:shadow-md transition text-body flex flex-col justify-between">
            <div>
              <img src="<%= article.data.featured_image %>" alt="Blog Post 2" class="mb-4">
              <h4 class="font-semibold leading-snug"><%= article.title %></h4>
            </div>
            <p class="md:hidden mt-2 mb-0 text-link hover:text-linkhover transition">Read more</p>
          </a>
        <% end %>
      </div>
      <div class="text-center mt-4">
        <a href="/newsletters/" class="inline-block font-semibold bg-link text-white p-3 px-6 rounded-sm text-xs hover:bg-opacity-90">View All →</a>
      </div>
    </div>
  </div>
</section>
