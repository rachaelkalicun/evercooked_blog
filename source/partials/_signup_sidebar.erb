<h2 class="mt-2 lg:mt-4 text-l font-bold mb-0 lg:mb-4">Join the Evercooked Family!</h2>
<div class="px-2">
	<p class="mb-0">Get recipes, stories, and traditions<span class="hidden md:inline"> delivered straight to your inbox</span>.</p>
	<p class="hidden lg:block mb-0 lg:mb-4">Every dish draws us closer together.</p>
</div>
<div class="flex justify-center">
	<iframe id="signup-sidebar" src="https://evercooked.substack.com/embed" width="100%" height="150" frameborder="0" scrolling="no"></iframe>
</div>
<p id="adblock-warning-sidebar" class="hidden text-accent font-semibold text-lg text-center">
	Please disable your ad blocker to join our community!
</p>

<script>
  function isIframeHiddenSidebar() {
    const iframe = document.getElementById("signup-sidebar");
    if (!iframe) return true;
    return iframe.offsetParent === null;
  }

  function toggleWarningSidebar() {
    const warning = document.getElementById("adblock-warning-sidebar");
    if (isIframeHiddenSidebar()) {
      warning.classList.remove("hidden");
    } else {
      warning.classList.add("hidden");
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    toggleWarningSidebar();
  });

  window.addEventListener("resize", function () {
    toggleWarningSidebar();
  });
</script>
