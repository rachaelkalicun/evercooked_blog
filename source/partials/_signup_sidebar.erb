<h2 class="mt-2 lg:mt-4 text-l font-bold mb-0 lg:mb-4">Join the Evercooked Family!</h2>
<p class="mb-0">Get recipes, stories, and traditions<span class="hidden md:inline"> delivered straight to your inbox</span>.</p>
<p class="hidden lg:block mb-0 lg:mb-4">Every dish draws us closer together.</p>
<div class="flex justify-center">
	<iframe src="https://evercooked.substack.com/embed" width="100%" height="150" frameborder="0" scrolling="no"></iframe>
</div>
<p id="adblock-warning" class="hidden text-accent font-semibold text-lg text-center">
	Please disable your ad blocker to join our community!
</p>

<script>
  function isIframeHidden() {
    const iframe = document.querySelector('iframe[src="https://evercooked.substack.com/embed"]');
    if (!iframe) return true;
    return iframe.offsetParent === null;
  }

  document.addEventListener("DOMContentLoaded", function () {
    if (isIframeHidden()) {
      document.getElementById("adblock-warning").classList.remove("hidden");
    }
  });
</script>
